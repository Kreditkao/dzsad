#include <iostream>
using namespace std;

int main() {


    system("chcp 1251");
    system("cls");


    // Створення масиву з шести елементів
    int arr[6];

    // Заповнення масиву з клавіатури
    cout << "Введіть 6 чисел: ";
    for (int i = 0; i < 6; i++) {
        cin >> arr[i];
    }

    // Виведення чисел у зворотному напрямі
    cout << "Числа у зворотному напрямі: ";
    for (int i = 5; i >= 0; i--) {
        cout << arr[i] << " ";
    }
    cout << endl;

    // Виведення комірок з парними номерами
    cout << "Комірки з парними номерами: ";
    for (int i = 0; i < 6; i += 2) {
        cout << arr[i] << " ";
    }
    cout << endl;

    // Виведення комірок з непарними номерами
    cout << "Комірки з непарними номерами: ";
    for (int i = 1; i < 6; i += 2) {
        cout << arr[i] << " ";
    }
    cout << endl;

    // Виведення комірок з парними значеннями
    cout << "Комірки з парними значеннями: ";
    for (int i = 0; i < 6; i++) {
        if (arr[i] % 2 == 0) {
            cout << arr[i] << " ";
        }
    }
    cout << endl;

    // Виведення комірок з непарними значеннями
    cout << "Комірки з непарними значеннями: ";
    for (int i = 0; i < 6; i++) {
        if (arr[i] % 2 != 0) {
            cout << arr[i] << " ";
        }
    }
    cout << endl;

    // Створення нового масиву на 25 елементів
    int newArr[25];

    // Заповнення нового масиву номерами комірок
    for (int i = 0; i < 25; i++) {
        newArr[i] = i + 1;
    }

    // Виведення нового масиву двічі
    cout << "Новий масив (перший раз): ";
    for (int i = 0; i < 25; i++) {
        cout << newArr[i] << " ";
    }
    cout << endl;

    cout << "Новий масив (другий раз): ";
    for (int i = 0; i < 25; i++) {
        cout << newArr[i] << " ";
    }
    cout << endl;

    return 0;
}
